<table>
  <% book.book_comments.each do |comment| %>
  <tr>

    <td><%= image_tag comment.user.get_profile_image, size: '50x50' %>
    <%= link_to (comment.user) do %>
    <br>
    <%= comment.user.name %>
    <% end %>
  </td>
  <td>
    <%= comment.comment %>
  </td>
  <% if comment.user == current_user %>
    <td>
      <%= link_to "Destroy",book_book_comment_path(book,comment),method: :delete,remote:true,class: 'btn-sm btn-danger' %>
    </td>
  <% end %>

  </tr>
  <% end %>
</table>

<%= form_with(model:[book,book_comment],local:false) do |f| %>
  <div class="form-group">
    <%= f.text_area :comment,rows:'5',cols:'50' %>
  </div>
  <div class="form-group">
    <%= f.submit "送信" %>
  </div>
<% end %>