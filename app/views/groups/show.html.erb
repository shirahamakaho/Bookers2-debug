<div class='container px-5 px-sm-0'>
  <div class='row'>

    <div class="col-md-3">
      <h2>User info</h2>
        <%= render 'users/info', user:current_user %>
      <h2 class="mt-3">New book</h2>
        <%= render 'books/form', book:@newbook %>
    </div>

    <div class='col-md-8 offset-md-1'>
      <h2>Group Detail</h2>

      <table>
        <thead>
          <tr>
            <th><%= image_tag @group.get_group_image, size:'50x50' %></th>
            <th><%= @group.name %></th>
            <th><%= @group.introduction %></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td></td>
            <td></td>
            <td></td>
          </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>